{
	"name": "srf",
	"version": "1.0.0",
	"description": "Martin's REST Framework",
	"main": "server.js",
	"scripts": {
		"browserify": "browserify -t browserify-css ./client/js/app.js -o ./public/js/bundle.js",
		"lint": "eslint *.js **/*.js",
		"postinstall": "npm run browserify",
		"start": "npm run browserify && node --harmony server.js",
