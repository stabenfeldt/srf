	"license": "ISC",
	"dependencies": {
		"browserify": "13.0.1",
		"browserify-css": "0.9.1",
		"express": "4.21.1"
	},
	"devDependencies": {
		"mocha": "2.5.3",
		"nightwatch": "0.9.5",
		"should": "9.0.2"
	}
}
